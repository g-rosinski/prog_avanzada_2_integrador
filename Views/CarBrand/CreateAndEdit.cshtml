@model prog_avanzada_2_tp_integrador.Models.ViewModels.CarBrandView

@{
    ViewData["Title"] = "Marca";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.brand.Id == null)
{
    <h1>Agregar Marca</h1>
}
else
{
    <h1>Editar Marca</h1>
}

<div class="row">
    <div class="col-sm-4">

        <form asp-action="CreateOrUpdate" asp-controller="CarBrand" method="post">
            <input type="hidden" asp-for="brand.Id" />


            <div class="mb-2">
                <label class="form-label" asp-for="brand.Name">Nombre</label>
                <input class="form-control form-control-sm" asp-for="brand.Name" type="text" required />
            </div>


            <div class="mb-2">

                @if (Model.brand.Id == null)
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Crear</button>
                }
                else
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Actualizar</button>

                }
                <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="CarBrand">Volver</a>

            </div>

        </form>

    </div>
</div>